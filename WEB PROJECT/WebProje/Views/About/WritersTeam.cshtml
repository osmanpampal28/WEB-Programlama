@model IEnumerable<EntityLayer.Concrete.Writer>

<div class="site-section">
    <div class="container">
        <div class="row mb-5 justify-content-center">
            <div class="col-md-5 text-center">
                <h2>Meet The Team</h2>
                <p>2 Student of Computer Engineering</p>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-5 text-center">
                    <img src="@item.WriterImage" alt="Image" class="img-fluid w-50 rounded-circle mb-4">
                    <h2 class="mb-3 h5">@item.WriterN_S</h2>
                    <p>@item.WriterAbout</p>

                    <p class="mt-5">
                        <a href="#" class="p-3"><span class="icon-facebook"></span></a>
                        <a href="#" class="p-3"><span class="icon-instagram"></span></a>
                        <a href="#" class="p-3"><span class="icon-twitter"></span></a>
                    </p>
                </div>
            }


        </div>
    </div>
</div>
