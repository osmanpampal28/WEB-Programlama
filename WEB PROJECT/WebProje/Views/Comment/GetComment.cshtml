@*Yorumlari Goruntule*@

@model IEnumerable<EntityLayer.Concrete.Comments>

<div class="pt-5">
    <h3 class="mb-5">Comments</h3>
    <ul class="comment-list">
        @foreach (var item in Model)
        {
            <li class="comment">
                <div class="vcard">
                    <img src="~/miniblog/images/person_5.jpg" alt="Image placeholder">
                </div>
                <div class="comment-body">
                    <h3>@item.UserN</h3>
                    <div class="meta"> @(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</div>
                    <p>@item.CommentDetail</p>
                </div>
            </li>
        }


    </ul>
    <!-- END comment-list -->

    @Html.Action("LeaveAComment", "Comment")

</div>



