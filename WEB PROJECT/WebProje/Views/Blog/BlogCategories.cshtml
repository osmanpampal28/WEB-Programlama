@model IEnumerable<EntityLayer.Concrete.Blog>

@{
    ViewBag.Title = "BlogCategories";
    Layout = "~/Views/Shared/LayoutProje.cshtml";
}

<div class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <span>Category</span>
                
                <h3>@ViewBag.categoryname</h3>

                <p>@ViewBag.categorydescription</p>

            </div>
        </div>
    </div>
</div>


<div class="site-section bg-white">
    <div class="container">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 mb-4">
                    <div class="entry2">
                        <a href="/Blog/BlogDetail/@item.BlogID"><img src="@item.BlogImage" alt="Image" style="height:250px;" class="img-fluid rounded"></a>
                        <div class="excerpt">
                            <span class="post-category text-white bg-secondary mb-3">@item.Categories.CategoriesName</span>

                            
                            <h2><a href="/Blog/BlogDetail/@item.BlogID">@item.BlogHeader</a></h2>

                            <div class="post-meta align-items-center text-left clearfix">
                                <figure class="author-figure mb-0 mr-3 float-left"><img src="@item.Writer.WriterImage" alt="Image" class="img-fluid"></figure>
                            </div>
                                <span class="d-inline-block mt-1">By <a href="#">@item.Writer.WriterN_S</a></span>
                                <span>&nbsp;-&nbsp; @(((DateTime)item.BlogDate).ToString("dd-MMM-yyyy"))</span>
                        </div>

                        <p>@item.BlogDetail.Substring(0, item.BlogDetail.Substring(0, 200).LastIndexOf(""))...</p>
                        <p><a href="#">Read More</a></p>
                    </div>
                </div>
            }





        </div>

    </div>
</div>


@Html.Action("Footer", "About");