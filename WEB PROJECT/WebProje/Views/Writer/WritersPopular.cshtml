@*Yazarin Popular Postlar*@

@model IEnumerable<EntityLayer.Concrete.Blog> 

<div class="sidebar-box">
    <h3 class="heading">Popular Posts</h3>
    
    <div class="post-entry-sidebar">
        <ul>
            @foreach (var item in Model)
            {
                <li>
                    <a href="/Blog/BlogDetail/@item.BlogID">
                        <img src="@item.BlogImage" alt="Image placeholder" class="mr-4">
                        <div class="text">
                            <h4>@item.BlogHeader</h4>
                            <div class="post-meta">
                                <span class="mr-2">@(((DateTime)item.BlogDate).ToString("dd-MMM-yyyy"))</span>
                            </div>
                        </div>
                    </a>
                </li>
            }

        </ul>
    </div>
</div>
