
@{
    ViewBag.Title = "ListWriter";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


@{

    ViewBag.Title = "AuthorList";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}



<!DOCTYPE html>
@model IEnumerable<EntityLayer.Concrete.Writer>

<html>

<body class="hold-transition sidebar-mini">

    <!-- Site wrapper -->

    <div class="wrapper">

        <!-- Navbar -->
        <!-- Main content -->

        <section class="content">

            <!-- Default box -->

            <div class="card card-solid">

                <div class="card-body pb-0">
                    <div class="row d-flex align-items-stretch">

                        @foreach (var item in Model)
                        {
                            if (item.WriterN_S != null) //veri tabanında bir tane boş kayır var onu engelliyor.
                            {
                                <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                                    <div class="card bg-light">
                                        <div class="card-header text-muted border-bottom-0">
                                            @item.WriterTitle
                                        </div>
                                        <div class="card-body pt-0">
                                            <div class="row">
                                                <div class="col-7">
                                                    <h2 class="lead"><b>@item.WriterN_S</b></h2>
                                                    <p class="text-muted text-sm"><b>About: </b> @item.ShortAbout </p>
                                                    <ul class="ml-4 mb-0 fa-ul text-muted">
                                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-building"></i></span> @item.Mail</li>
                                                        <li class="small"><span class="fa-li"><i class="fas fa-lg fa-phone"></i></span> Phone #: +90 @item.PhoneNumber</li>
                                                    </ul>
                                                </div>

                                                <div class="col-5 text-center">
                                                    <img src="@item.WriterImage" alt="" class="img-circle img-fluid">
                                                </div>
                                            </div>
                                        </div>

                                        <div class="card-footer">
                                            <div class="text-right">
                                                <a href="#" class="btn btn-sm bg-teal">
                                                    <i class="fas fa-comments"></i>Writer's Blogs
                                                </a>

                                                <a href="/Writer/EditWriter/@item.WriterID" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-user"></i> Edit Profile <!--Profili düzenle-->
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }

                        }
                    </div>
                </div>


            </div>

            <!-- /.card -->

        </section>

        <!-- /.content -->

    </div>

    <!-- /.control-sidebar -->

</body>

</html>

<a href="/Writer/AddWriter/" class="btn btn-primary">Enter New Writer</a> <!--Yeni Yazar Girişi-->

